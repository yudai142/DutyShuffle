// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  provider = "mysql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("DATABASE_URL")
}

model Work {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  multiple Int? @db.UnsignedInt
  archive Boolean @default(false)
  memberOption MemberOption[]
  history History[]
  @@map("work")
}
model Member {
  id Int @id @default(autoincrement())
  lastName String  @db.VarChar(30) @map("last_name")
  firstName String  @db.VarChar(30) @map("first_name")
  kanaName String  @db.VarChar(255) @map("kana_name")
  archive Boolean @default(false)
  memberOption MemberOption[]
  history History[]
  @@map("member")
}

model MemberOption {
  id Int @id @default(autoincrement())
  work Work @relation(fields: [workId], references: [id])
  workId Int @map("work_id")
  member Member @relation(fields: [memberId], references: [id])
  memberId Int @map("member_id")
  status Int
  @@map("member_option")
}

model History {
  id Int @id @default(autoincrement())
  work Work? @relation(fields: [workId], references: [id])
  workId Int? @map("work_id")
  member Member @relation(fields: [memberId], references: [id])
  memberId Int @map("member_id")
  day DateTime @db.Date
  @@map("history")
}

model ShuffleOption {
  id Int @id @default(autoincrement())
  interval Int? @default(7)
  reset_date DateTime? @db.Date
  @@map("shuffle_option")
}
